<?xml version="1.0" encoding="UTF-8"?>
<Context>
	<!-- disables storage of sessions across restarts -->
	<Manager pathname="" />
	<Resource name="BeanManager" auth="Container"
		type="javax.enterprise.inject.spi.BeanManager" factory="org.jboss.weld.resources.ManagerObjectFactory" />

	<Resource name="jdbc/responsivoBD" auth="Container"
		factory="org.apache.naming.factory.BeanFactory" type="com.mchange.v2.c3p0.ComboPooledDataSource"
		driverClass="com.mysql.jdbc.Driver" jdbcUrl="jdbc:mysql://localhost:3306/bd_responsivo"
		user="root" password="root" minPoolSize="5" maxPoolSize="5" />

	<Resource name="jdbc/dvsBD" auth="Container"
		factory="org.apache.naming.factory.BeanFactory" type="com.mchange.v2.c3p0.ComboPooledDataSource"
		driverClass="com.mysql.jdbc.Driver" jdbcUrl="jdbc:mysql://localhost:3306/dvs_stm"
		user="root" password="root" minPoolSize="2" maxPoolSize="2" />

</Context>